<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Navication_bar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your dialog theme if needed -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton.PositiveButton</item> <!-- Customize positive button style -->
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton.NegativeButton</item> <!-- Customize negative button style -->
    </style>

    <style name="DialogButton.PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize positive button style -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogButton.NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize negative button style -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ThemeSpl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/bgsplash</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Navication_bar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Navication_bar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Navication_bar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>