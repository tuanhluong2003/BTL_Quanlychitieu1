<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".ui.Thongke.Frangment_Thongke"
    android:background="@drawable/img">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_ngaythang"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:fontFamily="@font/adamina"
                android:text="01-2023">

            </TextView>

            <Button
                android:id="@+id/btn_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Change">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="5sp"
                android:text="Tổng thu:"
                android:textAlignment="viewEnd"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tb_tongthutk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="10sp"
                android:paddingStart="20sp"
                android:text="18012003 Đồng"
                android:textAlignment="viewStart"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="5sp"
                android:text="Tổng chi:"
                android:textAlignment="viewEnd"
                android:textColor="#CA1808"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/tb_tongchitk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:padding="10sp"
                android:paddingStart="20sp"
                android:text="-18012003 Đồng"
                android:textAlignment="viewStart"
                android:textColor="#CA1808"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#A158E60C"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Thống kê chi theo ngày">

            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_chitheongay"
                android:layout_width="match_parent"
                android:layout_height="370dp">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#8B0811C8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Thống kê thu theo ngày">

            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_thutheongay"
                android:layout_width="match_parent"
                android:layout_height="370dp">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#A158E60C"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Thống kê theo loại chi">
            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_theoloaichi"
                android:layout_width="match_parent"
                android:layout_height="370dp">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#8B0811C8"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Thống kê theo loại thu">
            </TextView>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_theoloaithu"
                android:layout_width="match_parent"
                android:layout_height="370dp">
            </com.github.mikephil.charting.charts.LineChart>
        </LinearLayout>
    </LinearLayout>


</ScrollView>